<Page x:ConnectionId='1'
    x:Class="Posta.Forms.DetaljiPotrosaca"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Posta.Forms"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="108*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='2' x:Name="bNazad" Content="Nazad" HorizontalAlignment="Left" Margin="30,16,0,0" VerticalAlignment="Top" Height="49" Width="62"                     />
        <TextBlock x:ConnectionId='3' x:Name="tbIme" Grid.Column="1" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" TextWrapping="Wrap"                                       VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='4' x:Name="tbPrezime" Grid.Column="1" HorizontalAlignment="Left" Margin="15,17,0,0" Grid.Row="2" TextWrapping="Wrap" Text="{Binding Prezime,Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='5' x:Name="tbAdresa" Grid.Column="1" HorizontalAlignment="Left" Margin="14,21,0,0" Grid.Row="3" TextWrapping="Wrap" Text="{Binding Path=Adresa,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='6' x:Name="tbEmail" Grid.Column="1" HorizontalAlignment="Left" Margin="16,18,0,0" Grid.Row="4" TextWrapping="Wrap" Text="{Binding Path=Email,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='7' x:Name="tbJmbg" Grid.Column="1" HorizontalAlignment="Left" Margin="16,18,0,0" Grid.Row="5" TextWrapping="Wrap" Text="{Binding Path=Jmbg,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='8' x:Name="tbBrojTelefona" Grid.Column="1" HorizontalAlignment="Left" Margin="15,17,0,0" Grid.Row="6" TextWrapping="Wrap" Text="{Binding Path=BrojTelefona,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='9' x:Name="textBlock" HorizontalAlignment="Left" Margin="30,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1">
         
            <Run FontWeight="Bold" Text="Ime:"/>
        </TextBlock>
        <TextBlock x:ConnectionId='10' x:Name="textBlock1" HorizontalAlignment="Left" Margin="30,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="3">
            <Run FontWeight="Bold" Text="Adresa:"/>
        </TextBlock>
        <TextBlock x:ConnectionId='11' x:Name="textBlock2" HorizontalAlignment="Left" Margin="30,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-2.231,5.45" Grid.Row="2">
            <Run FontWeight="Bold" Text="Prezime:"/>
        </TextBlock>
        <TextBlock x:ConnectionId='12' x:Name="textBlock3" HorizontalAlignment="Left" Margin="29,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="4">
            <Run FontWeight="Bold" Text="E-mail:"/>
        </TextBlock>
        <TextBlock x:ConnectionId='13' x:Name="textBlock4" HorizontalAlignment="Left" Margin="30,24,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top"                                               >
            <Run FontWeight="Bold" Text="JMBG:"/>
        </TextBlock>
        <TextBlock x:ConnectionId='14' x:Name="textBlock5" HorizontalAlignment="Left" Margin="29,21,0,0" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Top">
            <Run FontWeight="Bold" Text="Broj telefona:"/>
        </TextBlock>
    </Grid>
</Page>

